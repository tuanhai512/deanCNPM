<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:id="@+id/linearcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearitem"
        android:gravity="center">
        <TextView
            android:id="@+id/textView"
            android:layout_marginTop="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREATE ACCOUNT"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold"
            android:paddingBottom="70dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/linearitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.275"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearcontent">

        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/furniture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_baseline_account_circle_24"
            android:drawablePadding="4dp"
            android:hint="Username"
            android:inputType="textPersonName"
            android:padding="18dp"
            android:textAllCaps="false"
            android:textColorHint="@android:color/black" />

        <EditText
            android:id="@+id/editTextPass"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/furniture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
            android:drawablePadding="4dp"
            android:hint="Password"
            android:inputType="numberPassword"
            android:padding="18dp"
            android:textColorHint="@android:color/black" />

        <EditText
            android:id="@+id/editTextPass2"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/furniture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
            android:drawablePadding="4dp"
            android:hint="Confirm password"
            android:inputType="numberPassword"
            android:padding="18dp"
            android:textColorHint="@android:color/black" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/linearitem"
        android:paddingTop="30dp">

        <android.widget.Button
            android:id="@+id/btnOK"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape2"
            android:text="Sign in"
            android:textColor="#000000"
            android:textSize="18sp" />
        <Space
            android:layout_width="30dp"
            android:layout_height="match_parent"/>
        <android.widget.Button
            android:id="@+id/btnCancel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape2"
            android:text="Cancel"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>